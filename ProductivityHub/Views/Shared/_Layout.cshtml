<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/stylesheet.css")">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index" asp-controller="Game">Spiele</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index" asp-controller="Series">Serien</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index" asp-controller="Task">Aufgaben</a>
                    </li>
                </ul>
            </div>
        <div class="search-container">
            <form asp-action="Search" asp-controller="Home" method="get">>
                <input class="bg-dark text-white" type="text" placeholder="Search.." name="word">
                <button class="bg-dark text-white" type="submit">Submit</button>
            </form>
        </div>
        </div>
    </nav>
</header>

<main class="container mt-4">
    @RenderBody()
</main>

<footer class="page-footer fixed-bottom text-center py-3">
    <p>This site is owned by me! Yes me!</p>
</footer>
<script src=@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")></script>
@RenderSection("Scripts",required:false)
</body>
</html>
